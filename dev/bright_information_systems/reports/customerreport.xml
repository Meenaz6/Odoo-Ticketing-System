<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_customer_report" model="ir.actions.report">
            <field name="name">PDF</field>
            <field name="model">erp.solution</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">bright_information_systems.report_ticket_summary</field>
            <field name="report_file">bright_information_systems.report_ticket_summary</field>
            <field name="binding_type">report</field>
            <field name="binding_model_id" ref="model_erp_solution"/>
        </record>

        <template id="report_ticket_summary">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="content" style="padding: 20px;">
                        <t t-foreach="docs" t-as="doc">
                            <h2 class="report-title" style="text-align: center;">Customer Details</h2>
                            <table class="table table-sm"
                                   style="width: 70%; margin: auto; border: 1px solid #ddd; background-color: #f9f9f9; border-collapse: collapse;">
                                <tr style="background-color: #f2f2f2;">
                                    <th style="text-align: left; padding: 8px;">Name</th>
                                    <td style="text-align: left; padding: 8px;">
                                        <span t-esc="doc.name"/>
                                    </td>
                                </tr>
                                <tr>
                                    <th style="text-align: left; padding: 8px;">Mobile</th>
                                    <td style="text-align: left; padding: 8px;">
                                        <span t-esc="doc.mobile_number"/>
                                    </td>
                                </tr>
                                <tr>
                                    <th style="text-align: left; padding: 8px;">Email</th>
                                    <td style="text-align: left; padding: 8px;">
                                        <span t-esc="doc.email"/>
                                    </td>
                                </tr>
                                <tr>
                                    <th style="text-align: left; padding: 8px;">Country</th>
                                    <td style="text-align: left; padding: 8px;">
                                        <span t-esc="doc.locate"/>
                                    </td>
                                </tr>
                                <tr>
                                    <th style="text-align: left; padding: 8px;">Reference Id</th>
                                    <td style="text-align: left; padding: 8px;">
                                        <span t-esc="doc.reference"/>
                                    </td>
                                </tr>
                            </table>
                        </t>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>