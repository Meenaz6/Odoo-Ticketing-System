<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_ticket_report" model="ir.actions.report">
            <field name="name">PDF</field>
            <field name="model">ticket.raise</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">bright_information_systems.ticket_report_template</field>
            <field name="report_file">bright_information_systems.ticket_report_template</field>
            <field name="binding_type">report</field>
            <field name="binding_model_id" ref="model_ticket_raise"/>
        </record>

        <template id="ticket_report_template">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="content" style="padding: 20px;">
                        <t t-foreach="docs" t-as="doc">
                            <h2 class="report-title" style="text-align: center;">Ticket Details</h2>
                            <p style="text-align: center;">
                                Generated on:
                                <span t-esc="time.strftime('%Y-%m-%d %H:%M:%S')"/>
                            </p>
                            <table class="table table-sm"
                                   style="width: 70%; margin: auto; border: 1px solid #ddd; background-color: #f9f9f9; border-collapse: collapse;">
                                <tr style="background-color: #f2f2f2;">
                                    <th style="text-align: left; padding: 8px;">Name</th>
                                    <td style="text-align: left; padding: 8px;">
                                        <span t-esc="doc.name_id.name"/>
                                    </td>
                                </tr>
                                <tr>
                                    <th style="text-align: left; padding: 8px;">Mobile</th>
                                    <td style="text-align: left; padding: 8px;">
                                        <span t-esc="doc.mobile"/>
                                    </td>
                                </tr>
                                <tr>
                                    <th style="text-align: left; padding: 8px;">Email</th>
                                    <td style="text-align: left; padding: 8px;">
                                        <span t-esc="doc.email_id"/>
                                    </td>
                                </tr>
                                <tr>
                                    <th style="text-align: left; padding: 8px;">Reference</th>
                                    <td style="text-align: left; padding: 8px;">
                                        <span t-esc="doc.reference"/>
                                    </td>
                                </tr>
                                <tr>
                                    <th style="text-align: left; padding: 8px;">Ticket Type</th>
                                    <td style="text-align: left; padding: 8px;">
                                        <span t-esc="doc.ticket_type"/>
                                    </td>
                                </tr>
                                <tr>
                                    <th style="text-align: left; padding: 8px;">Description</th>
                                    <td style="text-align: left; padding: 8px;">
                                        <span t-esc="doc.description"/>
                                    </td>
                                </tr>
                                <tr t-if="doc.attachments_id">
                                    <th style="text-align: left; padding: 8px;">Attachments</th>
                                    <td style="text-align: left; padding: 8px;">
                                        <ul style="margin: 0; padding-left: 20px;">
                                            <t t-foreach="doc.attachments_id" t-as="attachment">
                                                <li>
                                                    <span t-esc="attachment.name"/>
                                                </li>
                                            </t>
                                        </ul>
                                    </td>
                                </tr>
                            </table>
                        </t>
                    </div>
                    <div class="footer" style="padding: 10px; border-top: 2px solid #ddd; text-align: center;">
                        <p style="margin: 0;">Thank you for choosing our service!</p>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>