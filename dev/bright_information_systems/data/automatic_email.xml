<odoo>
    <data noupdate="1">
        <record id="email_template_ticket_send" model="mail.template">
            <field name="name">New Ticket Notification</field>
            <field name="model_id" ref="model_ticket_raise"/>
            <field name="subject">New Ticket Received</field>
            <field name="email_from">meenaz.devop@gmail.com</field>
            <field name="email_to">raiseticket193@gmail.com</field>
            <field name="body_html">
                <![CDATA[
            <p>Hello dear Manager,</p>
            <p>A new ticket has been created : <t t-esc="object.reference"/> on the name of <t t-esc="object.name_id.name"/></p>
            <p>Please Check it and Update the Status</P>
            <p>
                     <a t-attf-href="/web#id={{ object.id }}&model=ticket.counter&view_type=form"
   style="display: inline-block; padding: 10px 15px; font-size: 14px; color: #fff; background-color: #140F2D; text-decoration: none; border-radius: 5px;">
   View Ticket
</a>
                    </p>
        ]]>
            </field>
        </record>
    </data>

    <data noupdate="1">
        <record id="email_template_ticket_send_customer" model="mail.template">
            <field name="name">New Ticket Notification customer</field>
            <field name="model_id" ref="model_ticket_raise"/>
            <field name="subject">Ticket Generated : {{object.reference}}</field>
            <field name="email_from">meenaz.devop@gmail.com</field>
            <field name="email_to">{{object.email_id}}</field>
            <field name="body_html">
                <![CDATA[
            <p>Hello <t t-esc="object.name_id.name"/>,</p>
            <p>We have received your Ticket : <t t-esc="object.reference"/></p>
            <p>you will get further details once ticket has been reviewed by our Bright Experts</p>
            <p>Until then be Relaxed</p>
            <p>
                     <a t-attf-href="/web#id={{ object.id }}&model=ticket.raise&view_type=form"
   style="display: inline-block; padding: 10px 15px; font-size: 14px; color: #fff; background-color: #140F2D; text-decoration: none; border-radius: 5px;">
   View Ticket
</a>
                    </p>
        ]]>
            </field>
        </record>
    </data>
</odoo>