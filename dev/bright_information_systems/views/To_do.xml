<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="action_to_do" model="ir.ui.view">
        <field name="name">action_to_add</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project_todo.project_task_view_todo_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='tag_ids']" position="after">
                <field name="work_link" widget="url" placeholder="You can put external link here"/>
            </xpath>

            <xpath expr="//field[@name='user_ids']" position="after" >
                <field name="url_selection" options="{'no_create_edit': True}" placeholder="Select an option"/>
            </xpath>
            <xpath expr="//field[@name='personal_stage_type_id']" position="before" >
                <link rel="stylesheet" href="dev/bright_information_systems/static/src/css/style.css"/>
                <button name="action_todo_ticket" id="send_by_email_primary" string="Send by Email" type="object"
                            data-hotkey="g" class="custom_style"/>
<!--                    <button data-hotkey="y" string="Cancel" special="cancel"/>-->
            </xpath>
            <xpath expr="//sheet" position="after">
                <link rel="stylesheet" href="dev/bright_information_systems/static/src/css/style.css"/>
                <button name="action_redirect" string="Go to WorkPlace"
                        help="On clicking this you will be redirected to the Workplace"
                        type="object"
                        class="custom_style1"/>
                <!--                        confirm="This will redirect to the WorkPlace. Press Ok to Go!" -->
            </xpath>
        </field>
    </record>
</odoo>