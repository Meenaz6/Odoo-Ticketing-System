<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/css" href="dev1/Ticket/static/src/css/style.css"?>

<odoo>
    <record id="Ticket_counter_id" model="ir.ui.view">
        <field name="name">Ticket.counter.form</field>
        <field name="model">ticket.counter</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_ticket_send" id="send_by_email_primary" string="Send by Email" type="object"
                            data-hotkey="g" class="custom_style"/>
                    <button name="action_start_time" type="object" string="Start Time" class="custom_style"
                            invisible="is_running == True"/>
                    <button name="action_stop_time" type="object" string="Stop Time" class="btn-secondary"
                            invisible="is_running == False"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="reference" readonly="True"/>
                            <field name="name_id" readonly="True"/>
                            <field name="ticket_type" readonly="True"/>
                            <field name="email_id" readonly="True"/>
                            <field name="creation_date" readonly="True"/>
                            <field name="description" readonly="True"/>
                            <field name="attachments_id" widget="many2many_binary" readonly="True"/>
                            <field name="sla_deadline"/>
                            <field name="sla_status"/>
                        </group>
                        <group>
                            <field name="assign_id"/>
                            <field name="reassign_id" invisible="assign_id == False"/>
                            <field name="description2" invisible="assign_id == False"/>
                            <field name="priority"/>
                            <field name="state"/>
                            <field name="estimate_time"/>
                            <field name="re_estimated_time" invisible="estimate_time == False"/>
                            <field name="time_start"/>
                            <field name="time_end"/>
                            <field name="time_spent" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="Ticket_Counter_list" model="ir.ui.view">
        <field name="name">Ticket.counter.list</field>
        <field name="model">ticket.counter</field>
        <field name="arch" type="xml">
            <list>
                <field name="name_id" optional="show"/>
                <field name="reference" optional="show"/>
                <field name="state" optional="show"/>
                <field name="assign_id" optional="hide"/>
                <field name="reassign_id" optional="hide"/>
                <field name="priority" optional="hide"/>
                <field name="estimate_time" optional="show"/>
                <field name="re_estimated_time" optional="hide"/>
                <field name="sla_status" optional="hide"/>
                <field name="time_spent" optional="show"/>
                <field name="total_tickets" optional="hide"/>
                <field name="total_time" optional="hide"/>
            </list>
        </field>
    </record>
    <record id="search_ticket_view" model="ir.ui.view">
        <field name="name">search ticket Details</field>
        <field name="model">ticket.counter</field>
        <field name="arch" type="xml">
            <search>
                <field name="name_id"/>
                <field name="mobile"/>
                <field name="reference"/>
                <filter name="filter_on_time" string="Tickets On-time" domain="[('sla_status', '=', 'on_time')]"/>
                <filter name="filter_overdue" string="Tickets Overdue" domain="[('sla_status', '=', 'overdue')]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_by_state" context="{'group_by':'state'}"/>
                    <separator/>
                    <filter string="Assign Developer" name="group_by_assign_id" context="{'group_by':'assign_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <data>
        <record id="Ticket_Counter_project" model="ir.actions.act_window">
            <field name="name">Counter Project</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ticket.counter</field>
            <field name="view_mode">list,form,kanban</field>
        </record>
    </data>
</odoo>
