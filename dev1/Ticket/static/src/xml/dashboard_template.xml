<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="ticket_counter.Dashboard">
        <div class="ticket-dashboard">
            <!-- Metrics Section -->
            <div class="metrics-row">
                <div class="metric-card">
                    <div class="metric-value total-tickets">0</div>
                    <div class="metric-label">Total Tickets</div>
                </div>
                <div class="metric-card">
                    <div class="metric-value open-tickets">0</div>
                    <div class="metric-label">Open Tickets</div>
                </div>
                <div class="metric-card">
                    <div class="metric-value resolved-tickets">0</div>
                    <div class="metric-label">Resolved Tickets</div>
                </div>
                <div class="metric-card">
                    <div class="metric-value high-priority">0</div>
                    <div class="metric-label">High Priority</div>
                </div>
            </div>

            <!-- Charts Section -->
            <div class="charts-row">
                <div class="chart-container">
                    <h3>Ticket Types</h3>
                    <canvas class="ticket-type-chart"/>
                </div>
                <div class="chart-container">
                    <h3>Status Distribution</h3>
                    <canvas class="status-chart"/>
                </div>
                <div class="chart-container">
                    <h3>Developer Workload</h3>
                    <canvas class="workload-chart"/>
                </div>
            </div>
        </div>
    </t>
</templates>